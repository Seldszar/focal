{
  "name": "focal",
  "version": "0.0.0-development",
  "description": "Multi-column chat display for Twitch",
  "author": "Alexandre Breteau <contact@seldszar.fr>",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/seldszar/focal#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seldszar/focal.git"
  },
  "bugs": {
    "url": "https://github.com/seldszar/focal/issues"
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "semantic-release": "semantic-release",
    "test": "npm run lint"
  },
  "dependencies": {
    "chroma-js": "^1.3.7",
    "foundation-sites": "^6.4.2",
    "hyperid": "^1.4.1",
    "lodash": "^4.17.10",
    "popmotion": "^8.3.3",
    "raven-js": "^3.27.0",
    "twitch-js": "^2.0.0-beta.14",
    "vue": "^2.5.17",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@vue/cli-plugin-babel": "^3.0.0",
    "@vue/cli-plugin-eslint": "^3.0.0",
    "@vue/cli-service": "^3.0.0",
    "@vue/eslint-config-prettier": "^3.0.0",
    "lint-staged": "^7.2.2",
    "node-sass": "^4.9.3",
    "sass-loader": "^6.0.7",
    "semantic-release": "^15.6.1",
    "vue-template-compiler": "^2.5.17"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "gitHooks": {
    "commit-msg": "commitlint -e $GIT_PARAMS",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint"
    ],
    "*.vue": [
      "vue-cli-service lint"
    ]
  }
}
